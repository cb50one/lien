.sign
  .sign-logo
    %h1 lien
  .sign__container
    .sign__container--title
      %h2 プロフィール
    .sign__container__field
      = form_with(model: @profile, local: true) do |f|
        .field
          = f.label :アイコン
          %br/
          = f.file_field :icon, id: "image"
        .field
          = f.label :性別
          %br/
          = f.select :gender, ["男性", "女性", "その他"], include_blank: true
        .field.birth
          = f.label :生年月日
          %br/
          = raw sprintf(f.date_select(:birth_info, use_month_numbers: true, start_year: 1900, end_year: (Time.now.year), prompt: "--", date_separator: '%s'),"年 \n", '月 ') + '日'
        .field
          = f.label :居住地
          %br/
          = f.text_field :residence
        .field
          = f.label :趣味
          %br/
          = f.text_field :hobby
        .field
          = f.label :職業
          %br/
          = f.text_field :job
        .field
          = f.label :自己紹介
          %br/
          = f.text_area :text
        .actions.field
          = f.submit "新規登録"